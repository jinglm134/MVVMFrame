<?xml version="1.0" encoding="utf-8"?>
<com.project.mvvmframe.widget.PraiseLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@mipmap/icon_praise" />

    <com.project.mvvmframe.widget.PraiseView
        android:id="@+id/praiseView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:text="100"
        app:textColor="@color/black_3"
        app:textSize="20sp" />
</com.project.mvvmframe.widget.PraiseLayout>